<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/signout_logo"
            android:layout_width="240dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="32dp"
            android:foregroundGravity="center"
            android:src="@drawable/revalogo" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/signout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="FEEDBACK"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/signout_name"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signout_title"
                android:hint="Name"
                android:maxLines="1" />

            <EditText
                android:id="@+id/signout_feedback"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/signout_name"
                android:hint="Body"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="10" />

            <Button
                android:id="@+id/button_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signout_feedback"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:text="SEND FEEDBACK"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/signoutprompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_feedback"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:text="ARE YOUR SURE YOU WANT TO SIGN OUT?"
                android:textAlignment="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <Button
                android:id="@+id/signoutbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/signoutprompt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:text="YES, SIGNOUT!"
                android:textColor="#fff" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>